<!-- res/drawable/card_with_border_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#f0c0881b" /> <!-- Light color for subtle shadow -->
        </shape>
    </item>

    <!-- Border layer -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
            android:color="#E0E0E0" />
        </shape>
    </item>

    <!-- Background image layer -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <bitmap
            android:src="@drawable/card"
            android:gravity="fill" /> <!-- Use the image named 'card' as the background -->
    </item>
</layer-list>
