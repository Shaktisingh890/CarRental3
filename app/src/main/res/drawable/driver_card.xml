<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the rounded corners -->
    <corners android:radius="10dp" />

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Optional shadow effect (for API 21+) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Outline stroke (optional, if needed) -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />
</shape>
