<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="#66000000"/> <!-- Semi-transparent black for shadow -->
            <corners android:radius="10dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Main Layer -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/> <!-- White background -->
            <corners android:radius="10dp"/> <!-- Rounded corners -->
            <stroke android:color="#E0E0E0" android:width="1dp"/> <!-- Light gray border -->
        </shape>
    </item>
</layer-list>
