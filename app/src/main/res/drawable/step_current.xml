<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#2196F3" /> <!-- Blue color for current step -->
            <corners android:radius="25dp" /> <!-- Radius of 25dp for circular shape -->
        </shape>
    </item>
    <item android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp">
        <bitmap android:src="@drawable/ic_current" android:gravity="center" /> <!-- Current icon -->
    </item>
</layer-list>
