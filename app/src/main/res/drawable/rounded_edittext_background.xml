<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <!-- Shadow Effect -->
        <shape>
            <solid android:color="#B0BEC5"/> <!-- Light gray background for the shadow -->
            <corners android:radius="10dp"/> <!-- Rounded corners -->
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp"/> <!-- Padding for shadow effect -->
        </shape>
    </item>
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="0dp">
        <!-- Main background and border -->
        <shape>
            <solid android:color="#FFFFFF"/> <!-- White background -->
            <corners android:radius="10dp"/> <!-- Rounded corners -->
            <stroke android:color="#E0E0E0" android:width="1dp"/> <!-- Light gray border -->
        </shape>
    </item>
</layer-list>
