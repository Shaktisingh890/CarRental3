<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/loginbkg"
    tools:context=".activity.SignupDashboardActivity">


    <!-- Customer Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/customerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toTopOf="@id/partnerCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/baseline_person_24"
                android:tint="@color/green"
                android:contentDescription="Customer Icon" />

            <TextView
                android:id="@+id/customerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer"
                android:textSize="20sp"
                android:textColor="@color/green"
                android:textStyle="bold"/>

            <!-- Redirect Text for Customer -->
            <TextView
                android:id="@+id/signupRedirectTextCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up as a Customer"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Partner Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/partnerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/customerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/driverCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/baseline_person_24"
                android:tint="@color/yellow"
                android:contentDescription="Partner Icon" />

            <TextView
                android:id="@+id/partnerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partner"
                android:textSize="20sp"
                android:textColor="@color/yellow"
                android:textStyle="bold" />

            <!-- Redirect Text for Partner -->
            <TextView
                android:id="@+id/signupRedirectTextPartner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up as a Partner"
                android:textSize="16sp"
                android:textColor="@color/yellow"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Driver Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/driverCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/partnerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/baseline_person_24"
                android:tint="@color/red"
                android:contentDescription="Driver Icon" />

            <TextView
                android:id="@+id/driverTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver"
                android:textSize="20sp"
                android:textColor="@color/red"
                android:textStyle="bold" />

            <!-- Redirect Text for Driver -->
            <TextView
                android:id="@+id/signupRedirectTextDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up as a Driver"
                android:textSize="16sp"
                android:textColor="@color/red"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
