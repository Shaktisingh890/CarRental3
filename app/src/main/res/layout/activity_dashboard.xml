<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity.DashboardActivity">
    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Header Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:padding="16dp">
                <TextView
                    android:id="@+id/tvAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AYA Rental"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-medium" />
                <TextView
                    android:id="@+id/tvTopRated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvAppName"
                    android:text="✨ Top Rated Cars! ✨"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />
            </RelativeLayout>
            <!-- Card View for Search Form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/driver_card"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_margin="16dp"
                android:layout_marginTop="8dp">
                <!-- PICK UP -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PICK UP AT"
                        android:textSize="14sp"
                        android:textColor="@color/grey" />
                    <Spinner
                        android:id="@+id/pickupSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@android:color/white"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:gravity="center_vertical" />
                </LinearLayout>
                <!-- DROP OFF -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DROP OFF AT"
                        android:textSize="14sp"
                        android:textColor="@color/grey" />
                    <Spinner
                        android:id="@+id/dropoffSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@android:color/white"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:gravity="center_vertical" />
                </LinearLayout>
                <!-- PICKUP ON -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PICK UP ON"
                        android:textSize="14sp"
                        android:textColor="@color/grey"
                        android:layout_marginTop="5dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:background="@drawable/spinner_background"
                        android:padding="8dp"
                        android:gravity="center_vertical">
                        <!-- Select Date Section -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_calendar_month_24"
                                android:contentDescription="Calendar Icon"
                                android:tint="@color/grey" />
                            <TextView
                                android:id="@+id/trip_start_date"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                android:text="Select Date"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <!-- Divider (Optional) -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/grey"
                            android:layout_marginHorizontal="8dp" />
                        <!-- Select Time Section -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_access_time_24"
                                android:contentDescription="Time Icon"
                                android:tint="@color/grey" />
                            <TextView
                                android:id="@+id/trip_start_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Select Time"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!-- TRIP END -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DROP OFF ON"
                        android:textSize="14sp"
                        android:textColor="@color/grey"
                        android:layout_marginTop="5dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:background="@drawable/spinner_background"
                        android:padding="8dp"
                        android:gravity="center_vertical">
                        <!-- Select Date Section -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_calendar_month_24"
                                android:contentDescription="Calendar Icon"
                                android:tint="@color/grey" />
                            <TextView
                                android:id="@+id/trip_end_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Select Date"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <!-- Divider (Optional) -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/grey"
                            android:layout_marginHorizontal="8dp" />
                        <!-- Select Time Section -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_access_time_24"
                                android:contentDescription="Time Icon"
                                android:tint="@color/grey" />
                            <TextView
                                android:id="@+id/trip_end_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Select Time"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!-- Search Button -->
                <Button
                    android:id="@+id/search_car_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/green"
                    android:text="SEARCH CAR"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
            <!-- "Why AYA Rental?" Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="WHY AYA Rental?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp">
                <!-- 100% Hassle Free Secured Trip -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/secure_trip" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hassle free\nSecured Trip"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:textAlignment="center"/>
                </LinearLayout>
                <!-- Delivery Anywhere Anytime -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/delivery" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Affordable"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best Prices\nGuaranteed"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:textAlignment="center"/>
                </LinearLayout>
                <!-- Endless Pay by hour drive limitless -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/endless_driv" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Endless"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pay by hour\ndrive limitless"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:textAlignment="center"/>
                </LinearLayout>
                <!-- 25K+ Quality Cars -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/quality_cars" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25K+"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quality\nCars"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>
            <!-- Bottom Section (Buttons for Low Cost and Normal Cost) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:gravity="center">
                <Button
                    android:id="@+id/lowCostButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="General Cost"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp"
                    android:textSize="16sp"/>
                <Button
                    android:id="@+id/normalCostButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Premium Cost"
                    android:backgroundTint="#FF9800"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="100dp"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="EXPLORE OUR TRIBE"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />
                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">
                    <!-- Optional elevation for shadow -->
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/imageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="100dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color" />
    <View
        android:id="@+id/progressOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="@color/green" />
</FrameLayout>