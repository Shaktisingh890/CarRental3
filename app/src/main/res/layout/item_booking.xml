<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_background"
    android:padding="16dp"
    android:elevation="4dp"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Car Model Text -->
        <TextView
            android:id="@+id/textCarModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Mercedes-Benz"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Booking ID Text -->
        <TextView
            android:id="@+id/textBookingId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textCarModel"
            android:layout_marginTop="0dp"
            android:text="Booking id CZ2215"
            android:textColor="#808080"
            android:textSize="14sp" />

        <!-- Delete Icon -->
        <ImageView
            android:id="@+id/iconDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/close"
            android:contentDescription="Delete booking" />

        <!-- Car Image -->
        <ImageView
            android:id="@+id/imageCar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_toStartOf="@id/iconDelete"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="-20dp"
            android:src="@drawable/sedan"
            android:scaleType="centerCrop"
            android:contentDescription="Car image" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/location"
            android:contentDescription="Location icon" />

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="2464 Royal Ln. Mesa, New Jersey 45463"
            android:textSize="14sp"
            android:textColor="#808080" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTripStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trip start"
                android:textSize="14sp"
                android:textColor="#808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sat, 7 June, 5:30pm"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/textTripEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trip end"
                android:textSize="14sp"
                android:textColor="#808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon, 9 June, 6:30pm"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/textPaidAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paid $660"
        android:textSize="14sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium" />
</LinearLayout>
