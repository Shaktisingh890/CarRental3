<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/driver_card"
    android:padding="16dp"
    android:elevation="4dp"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Car Model Text -->
        <TextView
            android:id="@+id/textCarModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Mercedes-Benz"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textPaidAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid $660"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Delete Icon -->

        <!-- Car Image -->
        <ImageView
            android:id="@+id/imageCar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="-20dp"
            android:src="@drawable/sedan"
            android:scaleType="centerCrop"
            android:contentDescription="Car image" />
    </RelativeLayout>

    <!-- Booking ID Text -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <TextView
            android:id="@+id/textCarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium" />


    </LinearLayout>







</LinearLayout>
