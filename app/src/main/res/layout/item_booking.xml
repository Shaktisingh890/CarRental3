<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:background="@drawable/driver_card"
    android:padding="10dp"
    android:elevation="4dp"
    android:layout_marginBottom="16dp">

    <!-- Left Side (Car Image) -->
    <ImageView
        android:id="@+id/imageCar"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="10dp"
    android:src="@drawable/sedan"
    android:scaleType="fitCenter"
    android:contentDescription="Car image" />

    <!-- Right Side (Car Details) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginStart="6dp">

    <!-- Car Name -->
    <TextView
        android:id="@+id/textCarName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Name"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"/>

    <!-- Car Model -->
    <TextView
        android:id="@+id/textCarModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Mercedes-Benz"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <!-- Paid Amount -->
    <TextView
        android:id="@+id/textPaidAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paid $660"
        android:textSize="14sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium" />
</LinearLayout>

    </LinearLayout>
