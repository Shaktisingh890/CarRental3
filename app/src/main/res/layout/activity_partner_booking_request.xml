<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/driver_card"
        android:elevation="4dp"
        android:layout_gravity="center">

        <!-- Car Details -->
        <TextView
            android:id="@+id/tvCarDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Details"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvCarBrandModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand and Model: Toyota Camry"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvCarRent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent Per Day: $100"
            android:textSize="16sp"
            android:textColor="#28A745"
            android:layout_marginBottom="16dp" />

        <!-- Booking Details -->
        <TextView
            android:id="@+id/tvBookingDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Details"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvPickupLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup Location: New York"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvReturnLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return Location: Boston"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvPickupTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup Time: 10:00 AM, Jan 10"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvReturnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return Time: 10:00 AM, Jan 11"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <!-- Accept/Reject Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:textColor="@android:color/white"
                android:backgroundTint="#28A745"
                android:layout_marginEnd="16dp"
                android:padding="10dp"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/btnReject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:textColor="@android:color/white"
                android:backgroundTint="#FF3B30"
                android:padding="10dp"
                android:layout_gravity="center" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
