<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Car Details -->
        <TextView
            android:id="@+id/tvCarDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Details"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvCarBrandModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand  Model: Toyota Camry"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvCarRent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent Per Day: $100"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Booking Details -->
        <TextView
            android:id="@+id/tvBookingDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Details"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvPickupLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup Location: New York"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvReturnLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return Location: Boston"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvPickupTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup Time: 10:00 AM, Jan 10"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvReturnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return Time: 10:00 AM, Jan 11"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Accept/Reject Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/teal_700"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnReject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:backgroundTint="@color/red"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
