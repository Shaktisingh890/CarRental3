<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Toolbar/Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="Back button" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Identification"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Radio Buttons -->
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_national_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="National ID"
            android:buttonTint="@color/green" />

        <RadioButton
            android:id="@+id/radio_passport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passport"
            android:layout_marginTop="8dp"
            android:buttonTint="@color/green" />
    </RadioGroup>

    <!-- Input Field for National ID -->
    <EditText
        android:id="@+id/national_id_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="National ID Number"
        android:inputType="number"
        android:drawableLeft="@drawable/baseline_credit_card_24"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext_background"
        android:layout_marginTop="16dp" />

    <!-- Upload Photo Section -->
    <TextView
        android:id="@+id/upload_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload your ID photo"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Front Photo -->
        <LinearLayout
            android:id="@+id/frontPhoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/dashed_border"
            android:padding="16dp">
            <ImageView
                android:id="@+id/frontImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_add_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Front"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <!-- Back Photo -->
        <LinearLayout
            android:id="@+id/backPhoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/dashed_border"
            android:padding="16dp">
            <ImageView
                android:id="@+id/backImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_add_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Next Button -->
    <Button
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#1E824C"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:padding="12dp" />
</LinearLayout>