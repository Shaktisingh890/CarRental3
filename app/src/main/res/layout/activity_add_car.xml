<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/stepIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Basic Information"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Step 1: General Information -->
        <LinearLayout
            android:id="@+id/step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Car Name -->
            <EditText
                android:id="@+id/etCarName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Car Name (e.g., Toyota Corolla)"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Car Model -->
            <EditText
                android:id="@+id/etCarModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Car Model (e.g., 2022)"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Registration Number -->
            <EditText
                android:id="@+id/etRegistrationNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Registration Number (e.g., ABC1234)"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Category -->
            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Subcategory -->
            <EditText
                android:id="@+id/etSubcategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Subcategory (e.g., Economy, Luxury)"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Seating Capacity -->
            <Spinner
                android:id="@+id/spinnerSeatingCapacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Fuel Type -->
            <Spinner
                android:id="@+id/spinnerFuelType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Transmission Type -->
            <Spinner
                android:id="@+id/spinnerTransmissionType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

        <!-- Step 2: Rental Details -->
        <LinearLayout
            android:id="@+id/step2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/dailyRentalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Daily Rental Price"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/weeklyRentalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:hint="Weekly Rental Price (Optional)"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/monthlyRentalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Monthly Rental Price (Optional)"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

        <!-- Step 3: Features -->
        <LinearLayout
            android:id="@+id/step3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/airConditioning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Air Conditioning"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/gps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GPS"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/bluetooth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bluetooth Connectivity"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/childSeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Child Seat Available"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/otherFeatures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Other Features"
                android:layout_marginBottom="12dp"
                android:inputType="textMultiLine" />
        </LinearLayout>

        <!-- Step 4: Location -->
        <LinearLayout
            android:id="@+id/step4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/pickupLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pickup Location"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/dropoffLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Drop-off Location (Optional)"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

        <!-- Step 5: Image and Documentation -->
        <LinearLayout
            android:id="@+id/step5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Car Images"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/uploadImagesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Images" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Registration Document"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/uploadDocumentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Document" />
        </LinearLayout>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
