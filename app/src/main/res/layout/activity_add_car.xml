<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:elevation="6dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp" >

            <TextView
                android:id="@+id/stepIndicator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add Basic Information"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>


        <!-- Step 1: General Information -->
        <LinearLayout
            android:id="@+id/step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="12dp">

            <!-- Car Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Car Name"
                app:boxStrokeColor="@color/green"
                app:hintTextColor="@color/green"
                android:layout_marginBottom="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCarName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Car Model -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Car Model"
                app:boxStrokeColor="@color/green"
                app:hintTextColor="@color/green"
                android:layout_marginBottom="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCarModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Registration Number -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Registration Number"
                app:boxStrokeColor="@color/green"
                app:hintTextColor="@color/green"
                android:layout_marginBottom="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRegistrationNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Spinner with Proper Border -->
                <Spinner
                    android:id="@+id/spinnerCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_background"
                    android:padding="12dp" />

            <!-- Subcategory -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Subcategory "
                app:boxStrokeColor="@color/green"
                app:hintTextColor="@color/green"
                android:layout_marginBottom="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSubcategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Seating Capacity -->
                <Spinner
                    android:id="@+id/spinnerSeatingCapacity"
                    android:background="@drawable/rounded_edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />



            <!-- Fuel Type -->
            <Spinner
                android:id="@+id/spinnerFuelType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Transmission Type -->
            <Spinner
                android:id="@+id/spinnerTransmissionType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

        <!-- Step 2: Rental Details -->
        <LinearLayout
            android:id="@+id/step2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/dailyRentalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Daily Rental Price"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/weeklyRentalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:hint="Weekly Rental Price (Optional)"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/monthlyRentalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Monthly Rental Price (Optional)"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

        <!-- Step 3: Features -->
        <LinearLayout
            android:id="@+id/step3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/airConditioning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Air Conditioning"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/gps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GPS"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/bluetooth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bluetooth Connectivity"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/childSeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Child Seat Available"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/otherFeatures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Other Features"
                android:layout_marginBottom="12dp"
                android:inputType="textMultiLine" />
        </LinearLayout>

        <!-- Step 4: Location -->
        <LinearLayout
            android:id="@+id/step4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/pickupLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pickup Location"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/dropoffLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Drop-off Location (Optional)"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

        <!-- Step 5: Image and Documentation -->
        <LinearLayout
            android:id="@+id/step5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Car Images"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/uploadImagesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Images" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Registration Document"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/uploadDocumentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Document" />
        </LinearLayout>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                android:text="Next" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>