<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Close Button -->
    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/cross"
        android:layout_alignParentStart="true"
        android:contentDescription="Close" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal details"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2E4E4E"
        android:paddingTop="28dp" />

    <!-- Personal Details Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/btnClose"
        android:paddingTop="35dp">

        <!-- First Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First name"
            android:textSize="16sp"
            android:paddingTop="32dp"
            android:textColor="#8A8A8A" />

        <TextView
            android:id="@+id/tvFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shalini"
            android:textSize="18sp"
            android:textColor="#3B91F6"
            android:paddingTop="4dp" />

        <!-- Last Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last name"
            android:textSize="16sp"
            android:textColor="#8A8A8A"
            android:paddingTop="20dp" />

        <TextView
            android:id="@+id/tvLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Singh"
            android:textSize="18sp"
            android:textColor="#3B91F6"
            android:paddingTop="4dp" />

        <!-- Date of Birth -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of birth"
            android:textSize="16sp"
            android:textColor="#8A8A8A"
            android:paddingTop="20dp" />

        <TextView
            android:id="@+id/tvDob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/05/2002"
            android:textSize="18sp"
            android:textColor="#3B91F6"
            android:paddingTop="4dp" />

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email address"
            android:textSize="16sp"
            android:textColor="#8A8A8A"
            android:paddingTop="20dp" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shalinisingh954856@gmail.com"
            android:textSize="18sp"
            android:textColor="#3B91F6"
            android:paddingTop="4dp" />

        <!-- Phone -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile phone"
            android:textSize="16sp"
            android:textColor="#8A8A8A"
            android:paddingTop="20dp" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="095485 62581"
            android:textSize="18sp"
            android:textColor="#3B91F6"
            android:paddingTop="4dp"
            android:paddingBottom="10dp" />
        <!-- Bottom Border Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"/>
        <!-- Add Mini Bio Button -->
        <TextView
            android:id="@+id/tvAddMiniBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add mini bio"
            android:textSize="16sp"
            android:textColor="#3B91F6"
            android:paddingTop="20dp" />

    </LinearLayout>
</RelativeLayout>
