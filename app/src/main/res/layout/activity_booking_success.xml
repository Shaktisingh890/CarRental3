<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Booking Status Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/baseline_check_circle_24"
            android:contentDescription="Success Icon"/>

        <!-- Booking Success Status Text with Border -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/bookingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booked Successfully"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Additional Confirmation Message -->
        <TextView
            android:id="@+id/confirmationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Your booking has been confirmed. A confirmation email will be sent shortly."
            android:textColor="#616161"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <!-- Summary Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/grey_border"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Car Name -->
            <TextView
                android:id="@+id/carName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <!-- Pickup Location -->
            <TextView
                android:id="@+id/pickupLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <!-- Trip Dates -->
            <TextView
                android:id="@+id/tripDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <!-- Rental Fees -->
            <TextView
                android:id="@+id/rentalFees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rental Fees:"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <!-- Total Fees -->
            <TextView
                android:id="@+id/totalFees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Fees: $600.00"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:layout_marginBottom="24dp"/>
        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/backToHomeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Home"
            android:backgroundTint="@color/green"
            android:textColor="#FFF"
            android:textSize="16sp"/>
    </LinearLayout>
</ScrollView>
