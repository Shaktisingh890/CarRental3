<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    android:layout_marginHorizontal="8dp"
    android:radius="8dp">

    <!-- Top Section with Avatar, Date, Time, and Price -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile"
            android:contentDescription="Driver Avatar"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun, 21st Apr . 5:00 PM"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 350"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Status -->
        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:background="#E8F5E9"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="8dp" />

    <!-- Ride Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Pickup Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/location"
                android:contentDescription="Location Icon"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panniyankara, Kozhikode, Kerala"
                android:textColor="#666666"
                android:textSize="14sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- Drop Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/location"
                android:contentDescription="Location Icon"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/dropLocationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HighLite, Kozhikode, Kerala"
                android:textColor="#666666"
                android:textSize="14sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
