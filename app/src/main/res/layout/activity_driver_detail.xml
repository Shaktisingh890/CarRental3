<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Driver Profile Image -->
        <ImageView
            android:id="@+id/driver_profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/profile"
            android:contentDescription="@string/driver_image"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop" />

        <!-- Driver Name -->
        <TextView
            android:id="@+id/driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- Vehicle Type -->
        <TextView
            android:id="@+id/driver_vehicle_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Type: Sedan"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- License Number -->
        <TextView
            android:id="@+id/driver_license_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="License: ABC12345"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- Phone Number -->
        <TextView
            android:id="@+id/driver_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: +91 9876543210"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Call Button -->
        <ImageView
            android:id="@+id/btn_call_driver"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/phone"
            android:contentDescription="@string/call_driver"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>
</ScrollView>
