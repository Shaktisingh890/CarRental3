<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking information"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:textColor="#000" />
        </LinearLayout>

        <!-- Car Image -->
        <ImageView
            android:id="@+id/carImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/image4"
            android:scaleType="centerCrop"
            android:contentDescription="Car Image"
            android:layout_marginBottom="16dp" />

        <!-- Switch Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvWithDriver"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="With driver"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="#000" />

            <Switch
                android:id="@+id/switchDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end" />
        </LinearLayout>


        <!-- Input Fields -->
        <EditText
            android:id="@+id/pickUpLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choose pick up location"
            android:drawableEnd="@drawable/baseline_add_location_24"
            android:background="@drawable/rounded_edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/returnLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choose return location"
            android:drawableEnd="@drawable/baseline_add_location_24"
            android:background="@drawable/rounded_edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/pickUpDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select pick up date and time"
            android:drawableEnd="@drawable/baseline_calendar_month_24"
            android:background="@drawable/rounded_edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/returnDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select return date and time"
            android:drawableEnd="@drawable/baseline_calendar_month_24"
            android:background="@drawable/rounded_edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="32dp" />

        <!-- Continue Button -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1E824C"
            android:text="Continue"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
